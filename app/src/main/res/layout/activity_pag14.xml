<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pag14">





    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="440dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/immp141" />

    <ImageView
        android:id="@+id/stemmap14"
        android:layout_width="248dp"
        android:layout_height="272dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stemma" />

    <TextView
        android:id="@+id/titolop14"
        android:layout_width="1063dp"
        android:layout_height="321dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="68dp"
        android:text="@string/doposisma"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view17"
        android:layout_width="550dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="470dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/testop14"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/testop14"
        android:layout_width="788dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="160dp"
        android:text="@string/descrdoposisma"
        android:textColor="@color/grigioscuro"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backbtnpag14"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="1244dp"
        android:layout_marginBottom="96dp"
        android:background="@color/fucsia"
        android:clickable="true"
        android:tint="@color/colorAccent"

        app:backgroundTint="@color/fucsia"
        app:fabCustomSize="68dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="34dp"
        app:srcCompat="@drawable/arrowleftmedia" />


    <ImageView
        android:id="@+id/geomp14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/rosa_no" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintBottom_toTopOf="@+id/geomp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

</android.support.constraint.ConstraintLayout>